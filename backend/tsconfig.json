{
	"compilerOptions": {
		"typeRoots": ["./node_modules/@types", "./types"],
		"module": "NodeNext",
		"baseUrl": "backend/src",
		"outDir": "dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"allowJs": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}